<h2>Edit <%= @user.username %> </h2>

<% if @user.errors.any? %>
  <%= @user.errors.full_messages.each do |error| %>
  <%= error %>
  <% end %>
<% end %>

<%= form_for @user do |f| %>
  Email: <%= f.text_field :email, placeholder: :email %>
  <br/>
  Location: <%= f.text_field :location, placeholder: :location %>
  <br/>
  Photo: <%= f.text_field :image, placeholder: :image %>
  <br/>
  <%= f.submit %>
<% end %>

<%= link_to "Go Back", user_path(@user) %>
<br/>
<%= link_to "Want to change your password?", new_reset_path %>
