  <div id='welcomeImg' class="row col-md-4">
    <img src='assets/pho.jpg' alt='food pic' class="stockPhoto" />
    <img src='assets/burgers.jpg' alt='food pic' class="stockPhoto" />
    <img src='assets/salad.jpg' alt='food pic' class="stockPhoto" />
  </div>

  <div id="loginform" class="col-md-6">
  <%= form_tag(login_path) do %>

  <%= label_tag(:username) %>
  <%= text_field_tag(:username, params[:username], autofocus: true, required: true) %>
  <br/>
  <%= label_tag(:password) %>
  <%= password_field_tag(:password) %>
  <br/>
  <%= submit_tag("Log in", class: "btn btn-primary") %>
<% end %>
  <%= link_to "Don't have an account? Sign up!", signup_path %>
  <br/>
  <%= link_to "Forgot Password?", new_reset_path %>
</div>

