<% if @post.errors.any? %>
  <% @post.errors.full_messages.each do |error| %>
    <p class= "text-danger">
      <%= error %>
    </p>
  <% end %>
<% end %>

<%= form_for @signup do |f| %>
  <div>
    <%= f.label :username %>
    <%= f.text_field :username %>
  </div>
  <div>
    <%= f.label :email %>
    <%= f.text_area :email %>
  </div>
  <div>
    <%= f.label :address %>
    <%= f.text_field :address %>
  </div>
  <div>
    <%= f.label :imageURL %>
    <%= f.text_field :imageURL %>
  </div>
  <div>
    <%= f.label :password %>
    <%= f.password :password %>
  </div>
  <div>
    <%= f.submit 'Signup'%>
  </div>
<% end %>

<%= form_for @login |f| %>
  <div>
    <%= f.label :username %>
    <%= f.text_field :username %>
  </div>
  <div>
    <%= f.label :password %>
    <%= f.password :password %>
  </div>
  <div>
    <%= f.submit %>
  </div>
<% end %>
