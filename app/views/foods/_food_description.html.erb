<h1><%= food_leader %><%= @food.name %></h1>
    <blockquote>
    <% if @food.description == '' || @food.description == nil || @food.description == ' '%>
      <p>No description found.</p>
    <% else %>
      <p><%= @food.description %></p>
    <% end %>
    <footer><%= link_to @food.restaurant.name, food_restaurant_path(@food.id, @food.restaurant_id)%></footer>
  </blockquote>
